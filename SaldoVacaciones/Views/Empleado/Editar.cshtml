@model EmpleadoModel
@{
    ViewData["Title"] = "Editar";
    Layout = "~/Views/Shared/_Layout.cshtml";
}

<div class="card">
    <div class="card-header">
        Editar Empleado
    </div>
    <div class="card-body">

        <form asp-action="Editar" asp-controller="Empleado" method="post">
            <input asp-for="ValorDocumentoIdentidad" type="hidden" class="form-control">

            <div class="mb-3">
                <label class="form-label">Valor Documento de Identidad</label>
                <input asp-for="ValorDocumentoIdentidad" class="form-control">
                <span asp-validation-for="ValorDocumentoIdentidad" class="text-danger"></span>

            </div>
            <div class="mb-3">
                <label class="form-label">Nombre</label>
                <input asp-for="Nombre" type="text" class="form-control">
                <span asp-validation-for="Nombre" class="text-danger"></span>
            </div>
            <div class="mb-3">
                <label class="form-label">Puestos</label>
                @Html.DropDownListFor(model => model.NombrePuesto, ViewBag.Puestos as SelectList, "Seleccionar Puesto", new { @class = "form-control" })
            </div>
            <button type="submit" class="btn btn-primary btn-abrir-modal"><i class="bi bi-save"></i> Guardar</button>
            <a asp-action="Listar" asp-controller="Empleado" class="btn btn-warning"><i class="bi bi-arrow-return-left"></i> Regresar</a>
        </form>
    </div>
</div>

