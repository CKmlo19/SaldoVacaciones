@model List<MovimientoModel>
@{
    ViewData["Title"] = "ListarMovimientos";
    Layout = "~/Views/Shared/_Layout.cshtml";
}

<h1>Lista Movimientos</h1>
<div class="card">
    <div class="card-body">
        <table class="table table-bordered" bgcolor="white" width="700">
            <thead>
                <h3>
                    @{ ActiveEmpleado e1 = ActiveEmpleado.GetInstance();
          
                    }
                    <p>
                        Cedula: @e1.GetEmpleado().ValorDocumentoIdentidad &nbsp; &nbsp;&nbsp;
                        Nombre: @e1.GetEmpleado().Nombre &nbsp;&nbsp;&nbsp;
                       Saldo: @e1.GetEmpleado().SaldoVacaciones
                    <p/>


                </h3>
                <tr bgcolor="grey">
                    <th>Fecha</th>
                    <th>Tipo Movimiento</th>
                    <th>Monto</th>
                    <th>NuevoSaldo</th>
                    <th>Usuario</th>
                    <th>IP</th>
                    <th>Estampa de tiempo</th>
                </tr>
            </thead>
            <tbody>
                @foreach (var item in Model) // c# en html
                {// se crea una nueva fila
                    <tr>
                        <!-- Se inserta los datos del modelo-->
                        <td>@item.Fecha.ToString("yyyy-MM-dd")</td>
                        <td>@item.NombreTipoMovimiento</td>
                        <td>@item.Monto</td>
                        <td>@item.NuevoSaldo</td>
                        <td>@item.NombreUsuario</td>
                        <td>@item.PostIP</td>
                        <td>@item.PostTime</td>
                    </tr>
                }

            </tbody>
        </table>
        <a asp-action="InsertarMovimiento" asp-controller="Movimiento" class="btn btn-success"><i class="bi bi-plus-circle"></i> Insertar</a>
        <a asp-action="Listar" asp-controller="Empleado" class="btn btn-warning"><i class="bi bi-arrow-return-left"></i> Regresar</a>

    </div>
</div>
